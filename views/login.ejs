<!DOCTYPE html>
<html>
	<head>
		<title>Log In</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	</head>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	<style>
		.forma {
			width:250px;
		}
		.centered {
			display: block;
			margin-left: auto;
			margin-right: auto;
		}
		.toggle{
			display:none
		}
	</style>

	<script>
		$(document).ready(function (){	
			$("#toggleRegister").click(function(){
				$("#prijava").toggle("slow");

				$("#registracija").toggle("slow");
				$(".toggle:visible").not("#registracija").hide();
			});
		});
	</script>

	<body style="padding:50px">

		<div id="prijava" class="col-sm-6">
			<% if(successMessage){ %> 
				<div class="alert alert-success" style="width:300px">
					<strong><%= successMessage %></strong>
				</div>
			<% } else if(abortMessage) {%>
				<div class="alert alert-danger" style="width:300px">
					<strong><%= abortMessage %></strong>
				</div>
			<% } %>
			<h3>Log in:</h3>
			<form action="/login" method="post" class="forma" enctype="multipart/form-data">
				<div class="form-group">
					<label for="log_usr">Username:</label>
					<input type="text" class="form-control" id="log_usr" name="log_usr"/>
				</div>
				<div class="form-group">
					<label for="log_pass">Password:</label>
					<input type="password" class="form-control" id="log_pass" name="log_pass"/>
				</div>
				<button type="submit" class="btn btn-default centered">Login</button>
				<a href="#" id="toggleRegister">New user? Then register!</a>
			</form>


		</div>

		<div id="registracija" class="col-sm-6 toggle">
			<h3>Registration</h3>
			<form action="/login/register" method="post" class="forma" enctype="multipart/form-data">
				<div class="form-group">
					<label for="usr">Username:</label>
					<input type="text" class="form-control" id="usr" name="usr" required/>
				</div>
				<div class="form-group">
					<label for="pass">Password:</label>
					<input type="password" class="form-control" id="pass" name="pass" required/>
				</div>
				<div class="form-group">
					<label for="dis">Display name:</label>
					<input type="text" class="form-control" id="dis" name="dis" required />
				</div>
				<button class="btn btn-default centered" type="submit">Register</button>
			</form>
		</div>


	</body>
</html>
